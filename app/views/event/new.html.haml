%head
  %title Criar evento

- if @errors
  = @errors

%h1 Criação de evento
.row
  .col-md-6.col-md-offset-3
    = form_with scope: :event, url: '/event', local: true  do |f|

      = f.label :nome
      = f.text_field :nome, class: 'form-control'
      /%br
      /= f.label :foto
      /= f.url_field :foto
      /= f.submit 'Submit', :foto => "form_submit"
      %br
      = f.label :info
      = f.text_field :info, class: 'form-control'
      %br
      = f.label :local
      = f.text_field :local, class: 'form-control'
      %br
      = f.label :date, 'Data'
      = f.date_field :date, class: 'form-control'
      %br
      = f.label :time, 'Hora'
      = f.time_field :time, class: 'form-control'
      %br
      = f.submit "Criar evento", class: "btn btn-primary"
