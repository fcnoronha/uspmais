%head
  %title EVENTO+

- if @errors
  = @errors

%h1 EVENTO+
.row
  .col-md-6.col-md-offset-3
    = form_with scope: :event, url: '/event', local: true  do |f|

      = f.label :nome, 'Nome do Evento'
      .marked *
      = f.text_field :nome, class: 'form-control'
      /%br
      /= f.label :foto
      /= f.url_field :foto
      /= f.submit 'Submit', :foto => "form_submit"
      %br
      = f.label :info, 'Conte um pouco sobre o seu evento'
      .marked *
      = f.text_area :info, class: 'form-control'
      %br
      = f.label :local, 'Onde?'
      .marked *
      = f.text_field :local, class: 'form-control'
      %br
      = f.label :date, 'Que dia?'
      .marked *
      = f.date_field :date, class: 'form-control'
      %br
      = f.label :time, 'Que hora?'
      .marked *
      = f.time_field :time, class: 'form-control'
      %br
      = f.submit "Crie meu evento!", class: "btn btn-primary"
